{
  "name": "hydrate-text",
  "version": "2.0.0",
  "description": "A small, dependency-free and strongly typed template engine.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "/dist"
  ],
  "keywords": [
    "formatter",
    "javascript",
    "string",
    "template",
    "tree-shakable",
    "typescript",
    "zero-dependency"
  ],
  "author": "Vasilii Kovalev <vasilii.kovalev95@yandex.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasilii-kovalev/hydrate-text.git"
  },
  "homepage": "https://github.com/vasilii-kovalev/hydrate-text#readme",
  "bugs": {
    "url": "https://github.com/vasilii-kovalev/hydrate-text/issues"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "tslint": "tsc",
    "eslint": "eslint --ext .ts src --color",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "jest",
    "lint": "npm run tslint && npm run eslint && npm run prettier:check",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/index.ts"
    ]
  }
}
