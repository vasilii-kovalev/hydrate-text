{
  "name": "hydrate-text",
  "version": "1.1.0",
  "description": "Tiny library for dynamic text hydrating",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "tslint": "tsc --noEmit",
    "eslint": "eslint --ext .ts src --color",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run tslint && npm run eslint && npm test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasilii-kovalev/hydrate-text.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "zero-dependency",
    "text"
  ],
  "author": "Vasilii Kovalev <vasya.kowalev@yandex.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasilii-kovalev/hydrate-text/issues"
  },
  "homepage": "https://github.com/vasilii-kovalev/hydrate-text#readme",
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/index.ts"
    ],
    "coverageDirectory": "./coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prepublishOnly"
    }
  }
}
