{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "noEmit": false,
    "outDir": "./dist/esm"
  },
  "exclude": [
    "**/*.test.ts",
    /*
      Fixes error TS5055 ("Cannot write file '.../dist/types/....d.ts' because
      it would overwrite input file").
    */
    "dist/*"
  ]
}
